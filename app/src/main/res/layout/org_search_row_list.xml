<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/org_search_list_row"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="5dip" >

    <TextView
        android:id="@+id/org_name_searched"
        style="@style/listviewRowName"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/org_type_searched"
        style="@style/listviewRowDetail"
        android:layout_below="@id/org_name_searched"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/org_subscribe"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ehr_add_button"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/status"
        style="@style/listviewRowDetail"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:layout_marginTop="2dip"
        android:gravity="center_horizontal" />

</RelativeLayout>