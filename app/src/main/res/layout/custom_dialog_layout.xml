<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="100dp"
        android:minWidth="250dp" >

        <!--  -->

        <TextView
            android:id="@+id/image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:paddingLeft="15dip"
            android:text="@string/createappointments"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- android:drawableLeft="@drawable/icon_appointment_set" -->

        <TextView
            android:id="@+id/image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingLeft="15dip"
            android:text="@string/createreferal"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- android:drawableLeft="@drawable/referral_icon" -->

        <TextView
            android:id="@+id/image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingLeft="15dip"
            android:text="@string/drivingdirections"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- android:drawableLeft="@drawable/drivingdirections" -->

    </RelativeLayout>

</ScrollView>
