<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >
    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        >
        <ImageView
            android:id="@+id/iv_dashboard_grid_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/dashboard_health_record"
            >
        </ImageView>
        <ImageView
            android:id="@+id/iv_dashboard_tick"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/dashboard_red_cross"
            >
        </ImageView>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_dashboard_grid"
        style="@style/tv_roboto_regular_black_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/trolley_grey"
        android:text="Insurancecscscsccs"
        android:textSize="12dp"
        android:gravity="center"
        />
</LinearLayout>