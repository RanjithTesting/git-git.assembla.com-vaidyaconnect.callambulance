<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/selector_adapter_select_patient_in_emergency_row">

    <ImageView
        android:id="@+id/iv_user_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
         />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/tvAppearanceMediumBlack"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_user_pic"
        android:textColor="@drawable/selector_tv_black_to_primary_red"
         />
</RelativeLayout>