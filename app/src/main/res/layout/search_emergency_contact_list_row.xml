<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invitation_row"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="5dip" >

    <TextView
        android:id="@+id/search_emergency_contact_name"
        style="@style/textview_top_style" />

    <TextView
        android:id="@+id/search_emergency_gender"
        style="@style/textview_bottom_style"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/search_emergency_contact_name" />

    <TextView
        android:id="@+id/search_contact_sep1"
        style="@style/separatorPipe_textview"
        android:layout_below="@+id/search_emergency_contact_name"
        android:layout_toRightOf="@+id/search_emergency_gender" />

    <TextView
        android:id="@+id/search_emergency_age"
        style="@style/textview_bottom_style"
        android:layout_below="@id/search_emergency_contact_name"
        android:layout_toRightOf="@+id/search_contact_sep1" />

    <TextView
        android:id="@+id/search_contact_sep2"
        style="@style/separatorPipe_textview"
        android:layout_below="@+id/search_emergency_contact_name"
        android:layout_toRightOf="@+id/search_emergency_age" />

    <TextView
        android:id="@+id/search_emergency_loc"
        style="@style/textview_bottom_style"
        android:layout_below="@id/search_emergency_contact_name"
        android:layout_toRightOf="@+id/search_contact_sep2" />

    <ImageView
        android:id="@+id/search_emergency_accept"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:focusable="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ehr_add_button"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:layout_marginTop="2dip"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_style1" />

</RelativeLayout>