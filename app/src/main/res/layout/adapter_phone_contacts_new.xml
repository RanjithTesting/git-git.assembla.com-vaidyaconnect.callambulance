<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_contact_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_marginRight="8dp"
            android:background="@drawable/default_profile"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tv_phone_name"
                style="@style/tv_roboto_regular_black_normal"
                android:textColor="@color/outer_space"
                android:textSize="13dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_contact_number"
                style="@style/tv_roboto_regular_black_normal"
                android:textColor="@color/outer_space"
                android:textSize="13dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/text_bf"
            style="@style/tv_roboto_regular_red_normal"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone"
            android:textSize="14dp" />
        <CheckBox
            android:id="@+id/cb_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/manatee"
            android:gravity="right|center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="8dp"
        android:background="@color/separator"
        />
</LinearLayout>
